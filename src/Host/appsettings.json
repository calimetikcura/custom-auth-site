{
  "logging": {
    "verbose": true,
    "writetoconsole": true,
    "fileName": "c:\\logs\\kcura.identityserver.log",
    "filters": [ "kCura", "IdentityServer" ]
  },

  "identityServerRuntimeOptions": {
    "CertificateFileName": "idsvrtest.pfx",
    "CertificatePassword": "idsrv3test"
  },

  "identityServerRuntimeData": {
    "clients": [
      {
        "ClientId": "kCura",
        "ClientName": "kCura Sample",
        "AllowedGrantTypes": [ "implicit" ],
        "RequirePkce": true,
        "RequireConsent": false,
        "AllowOfflineAccess": false,
        "AllowedScopes": [ "openid" ],
        "RedirectUris": [ "kcura://login" ]
      }
    ],
    "identityResources": [
      {
        "Name": "openid",
        "DisplayName": "Your user identifier",
        "UserClaims": [ "sub" ]
      }
    ],
    "apiResources": [
      {
        "Name": "kCura.api",
        "DisplayName": "kCura API",
        "Scopes": [
          {
            "Name": "kCura.api",
            "DisplayName": "kCura API"
          }
        ],
        "UserClaims": [ "name", "email", "email_verified" ]
      }
    ]
  }
}
